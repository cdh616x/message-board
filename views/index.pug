extends layout

block content
  header
    h1= 'Message Board'
    p= 'speak your mind freely'
    hr
  main
    .button-container
      a(href=`https://hidden-reef-92811.herokuapp.com/new`): button.compose= "got something to say?"
    each message in messages
      section.message-card
        h2= message.title
        h3= message.message
        footer
          p.username= message.user
          p.date= message.date
